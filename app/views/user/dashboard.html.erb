<div class="col-md-4 col-md-offset-4">    
	<h2><%= @current_user.username %> Dashboard</h2>
	<% if @status == false %>
		<%= link_to('Complete your profile', profile_path(@current_user.username), class: 'btn btn-primary') %>
	<% else %>
		<%= render 'flash_message' %>
		<%= link_to('Edit your profile', edit_path(@current_user.username ), class: 'btn btn-primary') %>
	<% end %>
	<%= link_to('Logout', destroy_user_session_path, :method => :delete, class: 'btn btn-primary') %>
</div>